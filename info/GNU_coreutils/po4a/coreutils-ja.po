"$ stat -f --format=\"%n %i %l %t %s %S %b %f %a %c %d\" ...\n"
"$ stat -f --terse ...\n"
msgstr ""
"$ stat -f --format=\"%n %i %l %t %s %S %b %f %a %c %d\" ...\n"
"$ stat -f --terse ...\n"

