msgstr "fingerprint, 224-bit"

#. type: cindex
#: coreutils.texi:4000
#, no-wrap
msgid "fingerprint, 256-bit"
msgstr "fingerprint, 256-bit"

#. type: cindex
#: coreutils.texi:4001
#, no-wrap
msgid "fingerprint, 384-bit"
msgstr "fingerprint, 384-bit"

