#, no-wrap
msgid "384-bit checksum"
msgstr "384-bit checksum"

#. type: cindex
#: coreutils.texi:3995
#, no-wrap
msgid "checksum, 224-bit"
msgstr "checksum, 224-bit"

#. type: cindex
#: coreutils.texi:3996
#, no-wrap
msgid "checksum, 256-bit"
msgstr "checksum, 256-bit"

#. type: cindex
#: coreutils.texi:3997
#, no-wrap
msgid "checksum, 384-bit"
msgstr "checksum, 384-bit"

#. type: cindex
