#: coreutils.texi:14534
#, no-wrap
msgid "ispeed @var{n}"
msgstr "ispeed @var{n}"

#. type: opindex
#: coreutils.texi:14535
#, no-wrap
msgid "ispeed"
msgstr "ispeed"

