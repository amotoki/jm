.\"O .SH NAME
.SH 名前
.\"O tsearch, tfind, tdelete, twalk, tdestroy \- manage a binary tree
tsearch, tfind, tdelete, twalk, tdestroy \- 二分木 (binary tree) の操作
.\"O .SH SYNOPSIS
.SH 書式
.nf
.B #include <search.h>
.sp
.BI "void *tsearch(const void *" key ", void **" rootp ,
.BI "                int (*" compar ")(const void *, const void *));"
.sp
